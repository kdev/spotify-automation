{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "public": false,

  "functions": {
    "api/**/*.rs": {
      "runtime": "vercel-rust@4.0.5"
    }
  },

  "crons": [
    {
      "path": "/api/auto/mostplayed?time_range=short&name=Current%20Top%20Songs%20(Short%20Term)",
      "schedule": "4 20 * * *"
    },
    {
      "path": "/api/auto/mostplayed?time_range=medium&name=Current%20Top%20Songs%20(Medium%20Term)",
      "schedule": "4 25 * * *"
    },
    {
      "path": "/api/auto/mostplayed?time_range=long&name=Current%20Top%20Songs%20(Long%20Term)",
      "schedule": "4 30 * * *"
    }
  ]
}
